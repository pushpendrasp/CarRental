<h1>Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Car Manufacturer</th>
      <th>Car Model</th>
      <th>Customer Email </th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% if @history!=nil %>
  <tbody>
    <% @history.reverse_each do |rental| %>
      <tr>
        <% if rental.status != "cancelled"  && Customer.find_by_id(rental.customer_id) && Car.find_by_id(rental.car_id)%>
        <td><%= Car.find(rental.car_id).manufacturer %></td>
        <td><%= Car.find(rental.car_id).model %></td>
        <td><%= Customer.find(rental.customer_id).email %></td>
        <td><%= rental.start_date %></td>
        <td><%= rental.end_date %></td>
        <td><%= rental.status %></td>
      </tr>
    <% end %>
  <% end%>
  </tbody>
  <% end%>
</table>


<br>
