<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= admin.name %></td>
        <td><%= link_to 'Show', admin %></td>
        <%if (current_admin==nil)||(current_admin.id != admin.id)%>
            <% if admin.email != 'xadmin@gmail.com' %>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td >
                <% end %>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

