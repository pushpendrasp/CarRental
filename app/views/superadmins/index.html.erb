<p id="notice"><%= notice %></p>

<h1>Superadmins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @superadmins.each do |superadmin| %>
      <tr>
        <td><%= superadmin.name %></td>
        <td><%= superadmin.password %></td>
        <td><%= superadmin.email %></td>
        <td><%= link_to 'Show', superadmin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Superadmin', new_superadmin_path %>
