<h1>Register Mailers</h1>

<table>
  <thead>
    <tr>
      <th>Car</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @register_mailers.each do |register_mailer| %>
      <tr>
        <td><%= register_mailer.car_id %></td>
        <td><%= register_mailer.customer_id %></td>
        <td><%= link_to 'Show', register_mailer %></td>
        <td><%= link_to 'Edit', edit_register_mailer_path(register_mailer) %></td>
        <td><%= link_to 'Destroy', register_mailer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

